<odoo>
    <data>

        <record id="mileage_model_tree_view" model="ir.ui.view">
            <field name="name">mileage.model.tree</field>
            <field name="model">mileage.model</field>
            <field name="arch" type="xml">
                <tree string="Mileage Records" editable="top" duplicate="0">
                    <field name="vehicle_id"/>
                    <field name="departure_date"/>
                    <field name="return_date"/>
                    <field name="trip_reason"/>
                    <field name="start_location"/>
                    <field name="end_location"/>
                    <field name="odometer_at_end"/>
                    <field name="traveled_distance"/>
                    <field name="driver_id"/>
                </tree>
            </field>
        </record>

        <record id="mileage_model_search_view" model="ir.ui.view">
            <field name="name">mileage.model.search</field>
            <field name="model">mileage.model</field>
            <field name="arch" type="xml">
                <search>
                    <field name="departure_date" string="Departure Date"/>
                    <field name="return_date" string="Return Date"/>
                    <field name="trip_reason" string="Trip Reason"/>
                    <field name="start_location" string="Start Location"/>
                    <field name="end_location" string="End Location"/>
                    <separator/>
                    <field name="vehicle_id" string="Vehicle" groups="base.group_system"/>
                    <field name="driver_id" string="Driver" groups="base.group_system"/>
                    <separator/>
                    <filter name="todays_trips" string="Today's Trips"
                            domain="[('departure_date', '=', context_today())]"/>
                    <filter name="this_weeks_trips" string="This Week's Trips"
                            domain="[('departure_date', '>=', (context_today() - relativedelta(weeks=1)))]"/>
                    <filter name="this_months_trips" string="This Month's Trips"
                            domain="[('departure_date', '>=', (context_today() - relativedelta(months=1)))]"/>
                    <group string="Group By">
                        <filter string="Departure Date" name="departure_date_groupby"
                                context="{'group_by': 'departure_date'}"/>
                        <filter string="Return Date" name="return_date_groupby" context="{'group_by': 'return_date'}"/>
                        <separator/>
                        <filter string="Start Location" name="start_location_groupby"
                                context="{'group_by': 'start_location'}"/>
                        <filter string="End Location" name="end_location_groupby"
                                context="{'group_by': 'end_location'}"/>
                        <separator groups="base.group_system"/>
                        <filter string="Driver" name="driver_id_groupby" context="{'group_by': 'driver_id'}"
                                groups="base.group_system"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="mileage_model_form_view" model="ir.ui.view">
            <field name="name">mileage.model.form</field>
            <field name="model">mileage.model</field>
            <field name="arch" type="xml">
                <form string="Mileage Record">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Trip Details">
                                <field name="departure_date"/>
                                <field name="return_date"/>
                                <field name="trip_reason"/>
                                <field name="start_location"/>
                                <field name="end_location"/>
                            </group>
                            <group string="Vehicle Information">
                                <field name="vehicle_id"/>
                                <field name="odometer_at_end"/>
                                <field name="traveled_distance"/>
                            </group>
                        </group>
                        <group string="Driver Information">
                            <field name="driver_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>